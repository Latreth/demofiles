       <text x="500" y="40" transform="rotate(210,500,100)">VII</text>
       <text x="500" y="40" transform="rotate(240,500,100)">VIII</text>
       <text x="500" y="40" transform="rotate(270,500,100)">IX</text>
       <text x="500" y="40" transform="rotate(300,500,100)">X</text>
       <text x="500" y="40" transform="rotate(330,500,100)">XI</text>
      
      
       <g transform="translate(500,100)">
        <g id="heures" transform="rotate(550.5)">
         <polygon points="0,0 10,5 45,0 10,-5"/>
        </g>
        <g id="minutes" transform="rotate(39.8)">
         <polygon points="0,0 15,5 60,0 15,-5"/>
        </g>
        <g id="secondes" transform="rotate(138)">
         <polyline points="0,0 70,0"/>
        </g>
       </g>
      
      </g>
     </svg>
